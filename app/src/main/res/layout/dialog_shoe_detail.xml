<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 商品图片 -->
        <ImageView
            android:id="@+id/iv_detail_shoe"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_placeholder"
            android:layout_marginBottom="20dp" />

        <!-- 商品信息 -->
        <TextView
            android:id="@+id/tv_detail_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Jordan 1 Retro High OG"
            android:textSize="22sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1299.00"
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- 商品描述 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品描述"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="经典篮球鞋，传承乔丹精神..."
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- 添加到购物车按钮 -->
        <Button
            android:id="@+id/btn_detail_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_primary"
            android:text="加入购物车"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>